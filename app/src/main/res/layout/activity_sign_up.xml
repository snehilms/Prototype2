<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/design3"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="55sp"
        android:textColor="@color/design_default_color_on_secondary"
        android:text="Join us today" />
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="-15dp"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp"
        android:layout_below="@id/textView"
        android:text="and learn together with over 10,000 students"
        android:textStyle="bold"
        android:textSize="17dp"
        android:paddingLeft="20dp"
        />
    <LinearLayout
        android:id="@+id/linearL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/facebookSignup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/fb"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/gmailSignUp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/gm"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <EditText
        android:id="@+id/fullname"
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:drawableEnd="@drawable/ic_person_black_24dp"
        android:hint="Full Name"
        android:paddingLeft="5dp"
        android:background="@drawable/roundededittext"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="310dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="330dp"
        android:drawableEnd="@drawable/ic_local_phone_black_24dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="372dp"
        android:background="@drawable/roundededittext"
        android:paddingRight="10dp"
        android:hint="Phone number"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:drawableEnd="@drawable/ic_mail_outline_black_24dp"
        android:layout_below="@id/phone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="760dp"
        android:layout_marginTop="430dp"
        android:paddingRight="10dp"
        android:background="@drawable/roundededittext"
        android:hint="Email Address"
        android:paddingLeft="6dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_width="330dp"
        app:hintEnabled="false"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"
        android:layout_below="@id/emailAddress"
        >

        <EditText
            android:id="@+id/passwordSingUp"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@id/username"
            android:layout_alignStart="@+id/password"
            android:layout_alignTop="@+id/password"
            android:background="@drawable/roundededittext"
            android:hint="Password"
            android:paddingLeft="5dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/registerBT"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/register"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/gradCap"
        android:layout_width="210dp"
        android:layout_height="190dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/gradcap"
        android:layout_below="@id/registerBT"
        android:layout_alignParentEnd="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gradCap"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member?"
            android:textSize="20sp"
            android:textColor="@color/design_default_color_on_secondary"
            />

        <TextView
            android:id="@+id/LoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Login"
            android:textSize="25sp"
            android:textColor="#7A62A2"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/termsAndConditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerBT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By signing up, you agree to our"
            android:textSize="12sp"
            android:textColor="@color/design_default_color_on_secondary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Terms of use"
            android:textSize="13sp"
            android:textColor="#7A62A2"
            android:textStyle="bold"
            />
        <TextView
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="and"
            android:textSize="12sp"
            android:textColor="@color/design_default_color_on_secondary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="13sp"
            android:textColor="#7A62A2"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/termsAndConditions"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="69dp" />

</RelativeLayout>