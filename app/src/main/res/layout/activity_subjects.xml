        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/brainID"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brain"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find and compare courses, lectures and material for your target examinations"
            android:textSize="18sp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="25dp"
            android:gravity="start"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subjectsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/brainID"
